@inherits LayoutComponentBase

<div class="page">

    <main>
        <div class="top-row px-4">
            <img src="images/logo.png" 
                 alt="Luce Carter logo"
            />
            <NavLink href="/" class="nav-link" Match="NavLinkMatch.All" ActiveClass="active">Home</NavLink>
            <NavLink href="/blog" class="nav-link" ActiveClass="active">Blog</NavLink>
            <NavLink href="/about" class="nav-link" ActiveClass="active">About</NavLink>
            
        </div>

        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>